<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />

            <gradient
                android:angle="90"
                android:centerColor="@color/progress_bar_background"
                android:centerY="0.75"
                android:endColor="@color/progress_bar_background"
                android:startColor="@color/progress_bar_background" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="90"
                    android:endColor="@color/progress_bar_color"
                    android:startColor="@color/progress_bar_color" />
            </shape>
        </clip>
    </item>

</layer-list>